{% extends 'base.html.twig' %}

{% block title %}Liste des serveurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3">Liste des serveurs</h1>

        <table class="table table-striped mt-4">
            <thead>
            <th>ID</th>
            <th>Nom</th>
            <th>herbergeur</th>
            <th>port</th>
            <th>url</th>
            <th>CrÃ©ation</th>
            <th>Actions</th>
            </thead>

            <tbody>
            {% for serveurs in serveurs %}
                <tr>
                    <td>{{ serveurs.id }}</td>
                    <td>{{ serveurs.name }}</td>
                    <td>{{ serveurs.herbergeur }}</td>
                    <td>{{ serveurs.port }}</td>
                    <td>{{ serveurs.url }}</td>
                    <td>{{ serveurs.createdAT.format("d/m/Y")}}</td>
                    <td>
                        <a href="{{ path('admin_edit_serveurs', {id: serveurs.id}) }}" class="btn btn-primary">Modifier</a>
                        <form method="post" action="{{ path('admin_delete_serveurs', {id: serveurs.id}) }}"
                              style="display: inline-block" onsubmit="return confirm('Etes vous vraiment sur ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serveurs.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan=5>Il n'y a pas de serveurs</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_new_serveurs') }}" class="btn btn-primary">Nouveau serveur</a>
    </div>
{% endblock %}
